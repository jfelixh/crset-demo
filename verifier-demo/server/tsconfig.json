{
  "compilerOptions": {
    "target": "es2022",
    "moduleDetection": "auto",

    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      // TODO: Add aliases for new directories
      // "@services/*": ["src/services/*"],
      // "@utils/*": ["src/utils/*"]
      "@/db/*": ["src/db/*"],
      "@/types/*": ["src/types/*"],
      "@/controllers/*": ["src/controllers/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true
  }
}
